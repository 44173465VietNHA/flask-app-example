{% extends 'layout.j2' %}
{% from 'macro.j2' import form_row_submit %}

{% block body %}
    <h2>New Post</h2>
    <form action="{{ url_for('post_new') }}" method="post">
        {{ form.hidden_tag() }}
        {{ form.id }}

        <div class="form-group row">
            {{ form.text.label(class='col-sm-2 form-control-label text-xs-right', text='Text') }}
            <div class="col-sm-10">
                {{ form.text(autofocus=true, class='form-control', rows=5) }}
                {% if form.text.errors %}
                    <ul class="text-danger">
                        {% for error in form.text.errors %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>

        {{ form_row_submit('Save Post') }}
    </form>
{% endblock %}
